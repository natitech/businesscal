{
  "name": "poolpi/businesscal",
  "description": "PHP standalone library to manipulate business days",
  "license": "MIT",
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "joshtronic/php-holidayapi": "^1.0"
  },
  "suggest": {
    "joshtronic/php-holidayapi": "To retrieve holidays from holidayapi.com"
  },
  "autoload": {
    "psr-4": {
      "Poolpi\\Businesscal\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Poolpi\\Businesscal\\Test\\Unit\\": "test/Unit",
      "Poolpi\\Businesscal\\Test\\Integration\\": "test/Integration",
      "Poolpi\\Businesscal\\Double\\": "test/Double"
    }
  }
}
